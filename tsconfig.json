/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
	"compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "preserve",
    "importHelpers": true,
    "types": [
      "vitest/globals"
    ],
    "paths": {
      "@su-labs/font-size": [
        "./dist/su-labs/font-size"
      ],
      "@su-labs/notifications": [
        "./dist/su-labs/notifications"
      ],
      "@su-labs/scroll-spy": [
        "./dist/su-labs/scroll-spy"
      ],
      "@su-labs/theme": [
        "./dist/su-labs/theme"
      ],
      "@su-labs/visit-tracker": [
        "./dist/su-labs/visit-tracker"
      ],
      "settings-utils": [
        "./dist/settings-utils"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./projects/settings-utils/tsconfig.lib.json"
    },
    {
      "path": "./projects/su-labs/font-size/tsconfig.lib.json"
    },
    {
      "path": "./projects/su-labs/scroll-spy/tsconfig.lib.json"
    },
    {
      "path": "./projects/su-labs/notifications/tsconfig.lib.json"
    },
    {
      "path": "./projects/su-labs/visit-tracker/tsconfig.lib.json"
    },
    {
      "path": "./projects/su-labs/theme/tsconfig.lib.json"
    }
  ]
}
